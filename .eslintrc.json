{
  "extends": [
    "next/core-web-vitals",
    "@next/next/recommended"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-unused-vars": ["warn", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_" 
    }],
    "react-hooks/exhaustive-deps": "warn",
    "@next/next/no-html-link-for-pages": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "types/supabase.ts"
  ]
} 